<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 一个包可以就是一个模块 -->
	<package name="admin" extends="adminInterceptor" namespace="/">
		<!-- 一个包下可以放这个模块下的所有action -->
		<action name="adminlogin" class="com.sr178.iseek.admin.action.AdminLogin">
			<result name="success" type="json">
			  <param name="includeProperties">code</param>
			</result>
		</action>
		<action name="adminindex" class="com.sr178.iseek.admin.action.CheckRecordAction" method="recordList">
			<result name="success">
			   /admin/jcjl.jsp
			</result>
		</action>
		<action name="recordDetails" class="com.sr178.iseek.admin.action.CheckRecordAction" method="recordDetails">
			<result name="success">
			   /admin/jcjl-xq.jsp
			</result>
		</action>
		<action name="checkRecordList" class="com.sr178.iseek.admin.action.JctjAction" method="checkList">
			<result name="success" >
			   /admin/jctj-xq.jsp
			</result>
		</action>
		<action name="checkListJson" class="com.sr178.iseek.admin.action.JctjAction" method="checkList">
			<result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code,indexPage,cpName,list.*</param>
			</result>
		</action>
		<action name="jcdc" class="com.sr178.iseek.admin.action.JcdcAction" method="unList">
			<result name="success">
			   /admin/jcdc.jsp
			</result>
		</action>
		
		<action name="enforceRecordList" class="com.sr178.iseek.admin.action.JcdcAction" method="enforceList">
			<result name="success" >
			   /admin/jcdc-xq.jsp
			</result>
		</action>		
		
		<action name="enforceListJson" class="com.sr178.iseek.admin.action.JcdcAction" method="enforceList">
			<result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code,indexPage,efUserName,list.*</param>
			</result>
		</action>
				
		<action name="adminList" class="com.sr178.iseek.admin.action.AdminUserAction" method="showList">
			 <result name="success">
			   /admin/adminList.jsp
			</result>
		</action>
		<action name="editPwd" class="com.sr178.iseek.admin.action.AdminUserAction" method="editPwd">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
		<action name="logout" class="com.sr178.iseek.admin.action.AdminUserAction" method="logout">
			 <result name="success" type="redirect">
			   /index.jsp
			</result>
		</action>
		<action name="delete" class="com.sr178.iseek.admin.action.AdminUserAction" method="delete">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
		<action name="editStatus" class="com.sr178.iseek.admin.action.AdminUserAction" method="editStatus">
			  <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>	
		<action name="editAdmin" class="com.sr178.iseek.admin.action.AdminUserAction" method="editAdmin">
			 <result name="input">
			   /admin/editAdmin.jsp
			</result>
			<result name="success">
			   /admin/editAdmin.jsp
			</result>
		</action>	
		<action name="addAdmin" class="com.sr178.iseek.admin.action.AdminUserAction" method="addAdmin">
		    <result name="input">
			   /admin/addAdmin.jsp
			</result>
			<result name="success">
			   /admin/addAdmin.jsp
			</result>
		</action>	
		<action name="searchDepartMent" class="com.sr178.iseek.admin.action.AdminUserAction" method="searchDepartMent">
			  <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code,dps.*</param>
			</result>
		</action>
		<action name="userList" class="com.sr178.iseek.admin.action.UserAction" method="showListu">
			 <result name="success">
			   /admin/userList.jsp
			</result>
		</action>
		<action name="deleteu" class="com.sr178.iseek.admin.action.UserAction" method="deleteu">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
		<action name="editStatusu" class="com.sr178.iseek.admin.action.UserAction" method="editStatusu">
			  <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>	
		<action name="editUser" class="com.sr178.iseek.admin.action.UserAction" method="editUser">
			 <result name="input">
			   /admin/editUser.jsp
			</result>
			<result name="success">
			   /admin/editUser.jsp
			</result>
		</action>	
		<action name="addUser" class="com.sr178.iseek.admin.action.UserAction" method="addUser">
		    <result name="input">
			   /admin/addUser.jsp
			</result>
			<result name="success">
			   /admin/addUser.jsp
			</result>
		</action>
		
		<action name="checkItemList" class="com.sr178.iseek.admin.action.CheckItemAction" method="showList">
			 <result name="success">
			   /admin/bigCheckList.jsp
			</result>
		</action>
		<action name="addItem" class="com.sr178.iseek.admin.action.CheckItemAction" method="add">
            <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
		
		<action name="addOrEditCheckItem" class="com.sr178.iseek.admin.action.CheckItemAction" method="addOrEdit">
            <result name="success">
			    addOrEditCheckItem.jsp
			</result>
			<result name="redirect" type="redirect">
			    /admin/addOrEditCheckItem?id=${id}&amp;code=${code}
			</result>
		</action>
		
		<action name="addOrEditBigCheckItem" class="com.sr178.iseek.admin.action.CheckItemAction" method="addOrEditBigItems">
            <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
			<result name="redirect" type="redirect">
			    /admin/addOrEditCheckItem?id=${id}&amp;code=${code}
			</result>
		</action>
		
		<action name="requestDownList" class="com.sr178.iseek.admin.action.CheckItemAction" method="requestDownList">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code,downList.*</param>
			</result>
		</action>	
		
		
		<action name="deleteBigCheckItems" class="com.sr178.iseek.admin.action.CheckItemAction" method="deleteBigCheckItems">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>	
		
		<action name="deleteSmallCheckItems" class="com.sr178.iseek.admin.action.CheckItemAction" method="deleteSmallCheckItems">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
			
		<action name="updateStatus" class="com.sr178.iseek.admin.action.CheckItemAction" method="updateStatus">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>

		<action name="noticeList" class="com.sr178.iseek.admin.action.NoticeAction" method="showList">
			 <result name="success">
			   /admin/noticeList.jsp
			</result>
		</action>
		<action name="addOrEditNotice" class="com.sr178.iseek.admin.action.NoticeAction" method="addOrEdit">
             <result name="success">
			   addOrEditNotice.jsp
			</result>
			<result name="redirect" type="redirect">
			 /admin/addOrEditNotice?id=${id}&amp;code=${code}
			</result>
		</action>
		<action name="deleteNotice" class="com.sr178.iseek.admin.action.NoticeAction" method="delete">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
		<action name="getOne" class="com.sr178.iseek.admin.action.NoticeAction" method="getOne">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code,notice.*</param>
			</result>
		</action>
		<action name="editNoticeStatus" class="com.sr178.iseek.admin.action.NoticeAction" method="editNoticeStatus">
			 <result name="success" type="json">
			    <param name="ignoreHierarchy">false</param>
				<param name="includeProperties">code</param>
			</result>
		</action>
		
		<action name="uploadAttach" class="com.sr178.iseek.admin.action.NoticeAction" method="uploadAttach">
            <result name="success" type="json" >
				<param name="ignoreHierarchy">false</param>
				<param name="includeProperties">clientFileName,serverFileName,size</param>
			</result>		
		</action>
	</package>
	
	<package name="test" extends="myInterceptor" namespace="/test">
	  <action name="uploadAttach" class="com.sr178.iseek.admin.action.NoticeAction" method="uploadAttach">
            <result name="success" type="json" >
				<param name="ignoreHierarchy">false</param>
				<param name="includeProperties">clientFileName,serverFileName</param>
			</result>		
		</action>
	</package>
	
	<package name="adminInterceptor" extends="myInterceptor">
		<interceptors>
			<!-- 认证拦截器-->
			<interceptor name="adminUserInterceptor"
				class="com.sr178.iseek.admin.interceptor.AdminUserInterceptor" />
			<interceptor-stack name="adminStack">
				<interceptor-ref name="adminUserInterceptor" />
				<interceptor-ref name="myStack" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="adminStack" />
		<global-results>
			<!-- 当anction抛出异常将被转向web的错误处理页面，拦截器是exceptionInterceptor -->
			<result name="glober_error">
				/error_manager.jsp
			</result>
			<!-- 当没有登录的时候就会跳到首页要求其进行登录 -->
			<result name="nologin" type="redirect">
				/index.jsp
			</result>
		</global-results>
	</package>
</struts>
